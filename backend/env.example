# Configuration de base
NODE_ENV=production
PORT=10000

# Base de données MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smartplanning?retryWrites=true&w=majority

# Sécurité JWT
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# URLs Frontend/Client
FRONTEND_URL=https://smartplanning.fr
CLIENT_URL=https://smartplanning.fr

# Configuration OAuth Google
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://your-backend-url.onrender.com/api/auth/google/callback

# Configuration Email SMTP (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=contact@smartplanning.fr
SMTP_PASS=your_email_password

# Configuration Cloudinary (optionnel)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Configuration OpenAI (optionnel)
OPENAI_API_KEY=sk-your_openai_api_key

# Configuration OpenRouter pour l'IA
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key

# Session Secret
SESSION_SECRET=your_session_secret_key_here 